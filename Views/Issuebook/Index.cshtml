<div class="row">
    <div class="col-sm-4">
        @using (Html.BeginForm("Save", "Issuebook", FormMethod.Post))
        {
            <div class="form-group">
                <h3> Issue Book</h3>
            </div>
            <div class="form-group">
                <label>Member Id </label>
                <input type="text" id="mid" name="mid" class="form-control" placeholder="Member Id" required />
            </div>
            <div class="form-group">
                <label>Member Name</label>
                <input type="text" id="mname" name="mname" class="form-control" placeholder="Member Name" required />
            </div>
            <div class="form-group">
                <label>Book</label>
                <select class="form-control" id="book" name="book">
                    <option>Select the Book</option>
                </select>
            </div>
            <div class="form-group">
                <label>Issue Date</label>
                <input type="date" id="idate" name="idate" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Return Date</label>
                <input type="date" id="rdate" name="rdate" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" required />
            </div>

        }

    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script>
        getMid();

        function getMid()
        {
            $("#MemberId").keyup(function (e) {
            

                $.ajax({

                    type: 'GET',
                    URL: '/Issuebook/GetMid?=' + $("#MemberId").val(),
                    dataType: 'JSON',
                    success: function (data) {
                        $("#Name").val(data);

                    }

                });
            });
        }





    </script>
}